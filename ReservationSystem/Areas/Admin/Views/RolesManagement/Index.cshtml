
@{
    ViewData["Title"] = "Index";
}

<h1>List of Roles</h1>
<a class="btn btn-info" asp-action="Create">Create</a>
<div class="d-flex justify-content-center">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in ViewBag.Roles)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    </div>
